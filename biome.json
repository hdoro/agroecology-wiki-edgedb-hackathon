{
	"$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"include": [
			"src/**/*",
			"dbschema/**/*.ts",
			"./tailwind.config.ts",
			"./package.json"
		],
		"ignore": ["src/edgeql/**/*", "src/edgedb.interfaces.ts"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"noSvgWithoutTitle": "off"
			},
			"complexity": {
				"noForEach": "off"
			},
			"suspicious": {
				"noExplicitAny": "warn"
			}
		},
		"ignore": ["src/playground/**/*"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded"
		}
	}
}
